<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/top_circle"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/top_quarter_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/splashScreenLogo"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="180dp"
        android:layout_marginBottom="180dp"
        android:src="@drawable/zalertlogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.251"
        android:contentDescription="@string/logo" />

    <ImageView
        android:id="@+id/bottom_circle"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/bottom_quarter_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/bottomcircle" />

</androidx.constraintlayout.widget.ConstraintLayout>